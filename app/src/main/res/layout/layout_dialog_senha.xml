<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:padding="20dp">

    <EditText
        android:id="@+id/senha1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a senha actual"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/senha2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senha1"
        android:layout_alignParentStart="true"
        android:hint="Digite a nova senha"
        android:inputType="textPassword"/>


    <EditText
        android:id="@+id/senha3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senha2"
        android:layout_alignParentStart="true"
        android:hint="Confirme a nova senha"
        android:inputType="textPassword" />



</RelativeLayout>